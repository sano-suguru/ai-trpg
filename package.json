{
  "name": "ai-trpg",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "similarity": "similarity-ts check apps/ packages/ --extensions ts,tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@ai-trpg/eslint-config": "workspace:*",
    "eslint": "^9.39.2",
    "eslint-plugin-functional": "^9.0.2",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2"
  },
  "volta": {
    "node": "24.12.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ],
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
